<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="2dp">
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		>
		
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>
			
			<ProgressBar android:id="@+id/shopImageProgress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="2dp"
				/>
				
			<ImageView android:id="@+id/shopImage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="2dp"
				android:visibility="gone"
				/>
		</LinearLayout>			
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			>
				
			<TextView android:id="@+id/catchCopy2"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="キャッチコピー２"
				android:textSize="14sp"
				style="@style/ShopCategory"
				/>
				
			<TextView android:id="@+id/shopName"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="お店の名前"
				android:textSize="18sp"
				android:layout_marginBottom="3dp"
				style="@style/ShopName"
				/>

			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >
				
				<TextView android:text="ここからの距離"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					/>
				
				<TextView android:id="@+id/shopDistance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="-----"
					android:textSize="12sp"
					android:layout_marginLeft="10dip"
					/>
					
			</LinearLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >
				
				<TextView android:text="徒歩"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					/>
				
				<TextView android:id="@+id/shopTime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="-----"
					android:textSize="12sp"
					android:layout_marginLeft="10dip"
					/>
					
			</LinearLayout>
						
			<TextView android:id="@+id/shopOpenHour"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="営業時間"
				android:textSize="12sp"
				android:layout_marginBottom="2dp" />
				
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >
				
				<TextView android:text="平均予算"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"					
					/>
				
				<TextView android:id="@+id/shopAverageBudget"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---"
					android:textSize="12sp"
					android:layout_marginLeft="10dip"					
					/>					
			</LinearLayout>	
			
			<TextView android:id="@+id/shopCoupon"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="クーポンあり"
				android:textSize="12sp"
				android:textStyle="bold"
				android:textColor="#ff0000"
				android:layout_marginBottom="2dp"
				android:visibility="gone"
				/>

		</LinearLayout>
		
	</LinearLayout>

</LinearLayout>

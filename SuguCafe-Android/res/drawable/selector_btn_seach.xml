<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
         <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#3A3A3A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#C7DFDE" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#3A3A3A"
                android:endColor="#3A3A3A"
                />
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" > 
     <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#C56608"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#C7DFDE" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#C56608"
                android:endColor="#C56608"
                />
        </shape>
    </item>
    
</selector>